{
  "name": "secure-messaging-app",
  "version": "1.0.0",
  "description": "Secure console messaging application with end-to-end encryption",
  "main": "dist/server.js",
  "scripts": {
    "build": "node ./src/build/server.js && node ./src/build/client.js",
    "start:server": "node dist/server/index.js",
    "start:client": "node dist/client.js",
    "dev:server": "ts-node src/server/index.ts",
    "dev:client": "ts-node src/client.ts"
  },
  "bin": {
    "server": "dist/server.js",
    "client": "dist/client.js"
  },
  "keywords": [
    "secure",
    "messaging",
    "e2ee",
    "encryption",
    "console",
    "chat"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "esbuild": "^0.25.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
